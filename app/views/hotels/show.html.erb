<% provide(:title, @hotel.name) %>
<% if logged_in? %>
<div class="row">
  <aside class="col-md-4">

    <h1><%= @hotel.name%></h1>
	  <h2> <span class=" glyphicon glyphicon-map-marker"> </span> <%= @hotel.city %></h2>
    <h2> <span class="glyphicon glyphicon-certificate"></span> Ranked <%= @hotel.rank.ordinalize %> by users</h2>
    <section class="review_form">
        <%= render 'shared/review_form' %>
    </section>
    
  </aside>

   <div class="col-md-8">
      <h3><%= pluralize(@hotel.reviews.count, 'Review') %> <span class="glyphicon glyphicon-comment"> </span></h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>

