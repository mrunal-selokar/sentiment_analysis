
<% render 'shared/rank' , hotels: @hotels %>

<%provide(:title, 'All Hotels')%>
<div class="jumbotron text-center">
<h1>All Hotels</h1>
</div>
<div class="row">
<%= form_tag hotels_path, :method =>'get' do %>
		<%= text_field_tag :search ,params[:search], placeholder: ' Find a Hotel'%>
		<%= submit_tag "Search" , :name =>nil %>
<% end %>
</div>
<ul class="hotels">
	<% @hotels.each do |hotel| %>
		<div class="row">
        	<div class="col-sm-9">
          		<div class="well">
          			<div class="rank"> <%= hotel.rank %> <%=link_to hotel.name, hotel %>  </div>
				</div>
			</div>
		</div>		
	<% end %>
</ul>