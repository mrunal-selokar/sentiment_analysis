<% provide(:title, @user.name) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %> <br>
        </h1>
        <h4>
          <span class="badge"><%= @user.reviews.count %></span> Reviews
        </h4>
      </section>
      <% if @user == current_user %>
          <section class="review_form">
            <%= render 'shared/review_form' %>
          </section>
      <% end %>
      <% if current_user.admin? && @user== current_user %>
      <br>
      <h2> Add a new hotel</h2>
          <section class="review_form">
            <%= render 'shared/hotel_form' %>
          </section>
      <% end %>

    </aside>

    <div class="col-md-8">
        <h3>Reviews <span class="glyphicon glyphicon-comment"> </span></h3>
        <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>