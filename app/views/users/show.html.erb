<% provide(:title, @user.name) %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %> <br>
        </h1>
        <h4>
          <span class="badge"><%= @user.reviews.count %></span> Reviews
        </h4>
      </section>
      <% if @user == current_user %>
        <ul class="nav nav-tabs">
          <li><a data-toggle="tab" href="#reviewform">Review a Hotel</a></li>
          <% if current_user.admin?%>
          <li><a data-toggle="tab" href="#hotelform">Add New Hotel</a></li><% end %>
        </ul>
        <div class="tab-content">
        <div id="reviewform" class="tab-pane fade">
          <section class="review_form">
            <%= render 'shared/review_form' %>
          </section>
        </div>
        <div id="hotelform" class="tab-pane fade">
          <section class="review_form">
            <%= render 'shared/hotel_form' %>
          </section>
        </div>
      </div>
      <% end %>

    </aside>

    <div class="col-md-8">
        <h3>Reviews <i class="fa fa-comments-o" aria-hidden="true"></i></h3>
        <%= render 'shared/feed' %>
    </div>
  </div>
<% end %>