<% provide(:title, @hotel.name) %>
<% if logged_in? %>
<div class="row">
  <div class="col-sm-4 well">
    <div class="well">
       <h1><%= @hotel.name%></h1>
      <h2> <%= image_tag("map.png", :alt => "map") %> <%= @hotel.city %></h2>   
    </div>
    <div class="well">
      <h2> <span class="glyphicon glyphicon-certificate"></span> Ranked <%= @hotel.rank.ordinalize %> by customers</h2><br>
      <div class="progress">
          <div class="progress-bar" role="progressbar" style="width:40%; background-color:#00FF00" data-toggle="tooltip" title="Positive">
          </div>
          <div class="progress-bar progress-bar-warning" role="progressbar" style="width: 20%;background-color:#FFFF00" data-toggle="tooltip" title="Neutral">
          </div>
          <div class="progress-bar progress-bar-danger" role="progressbar" style="width: 10%; background-color:#FF0000"" data-toggle="tooltip" title="Negative">
          </div>
      </div>
    </div>
    <div class="well">
      Amenities : 
      <br>
      <div class="amenity">
        <%= image_tag("wifi.png", :alt => "WiFi") %>
        <%= image_tag("tv.png", :alt => "TV") %>
        <%= image_tag("service.png", :alt => "24 hr Service") %>
        <%= image_tag("swimming.png", :alt => "Pool") %>
        <%= image_tag("ac.png", :alt => "AC") %>
        <%= image_tag("carts.png", :alt => "Room Service") %>
        <%= image_tag("food.png", :alt => "Food") %>
        <%= image_tag("parking.png", :alt => "Parking") %>
      </div>
      <section class="review_form">
        <%= render 'shared/review_form' %>
      </section>
    </div>
  </div>
  <div class="col-sm-6">
      <h3><%= pluralize(@hotel.reviews.count, 'Review') %> <small><span class="glyphicon glyphicon-comment"> </span></small></h3>
      <%= render 'shared/feed' %>
  </div>
  <div class="col-sm-2 well">
    <div class="thumbnail">
      <img src="wifi.png" alt="Paris" width="400" height="300">
      <p>interior</p>
    </div>
  </div>
  </div>
<% end %>

