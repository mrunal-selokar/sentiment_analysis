<li id="review-<%=review.id %>">
      <div class="comment">
        <span class="img">
          <span class="inner">
            <span class="avatar" ><%= image_tag(review.user.avatar.url(:thumb)) %></span>
          </span>
        </span>
        <p>
	        <span class="user">          
          <%= link_to review.user.name, review.user %>
          </span> |
	        <span class="hotel">
            <%= link_to review.hotel.name, review.hotel %>
          </span><br>
          <i class="fa fa-quote-left fa-sm"></i> &nbsp;
          <%= review.content %> &nbsp;
          <i class="fa fa-quote-right fa-sm"></i>
	        <span class="timestamp">
		        <span class="glyphicon glyphicon-time"></span> Posted <%= time_ago_in_words(review.created_at) %> ago.
	        </span>
        </p>
      </div>
</li>