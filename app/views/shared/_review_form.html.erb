<%= form_for Review.new do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :user, placeholder: "Your name please" %>
    <%= f.text_area :content, placeholder: "Write a review..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>