<%= form_for Review.new do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
   	<div class="dropdown dropdown-toggle">
 		  <%= f.collection_select(:hotel_id, Hotel.all, :id, :name ) if params[:controller] != "hotels" %>
 	  </div>
 	  <% if params[:controller] == "hotels" %>
  	  <%= f.hidden_field :hotel_id, :value => params[:id] %> 
  	<% end %>
  	<%#= f.hidden_field :user_id, :value => params[:id] %>
  	<%= image_tag("comment.gif", :alt => "Comment") %>
    <br>
    <%= f.text_area :content, placeholder: "   Write a review...",required: "true" %>
  </div>
  <span><%= f.submit "Post", class: "btn" %></span>
  <%= f.hidden_field :controller, :value => params[:controller] %>
<% end %>