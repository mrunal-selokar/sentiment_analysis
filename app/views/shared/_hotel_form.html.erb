<%= form_for @hotel do |f| %>
  <%= render 'shared/error_messages', object: @hotel %>
  <%#= hidden-field_tag "amenities[]", '' %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>

  Select Amentites Available
  <% @amenities = Amenity.column_names[1..8] %>

  <% @amenities.each do |amenity| %>
    <div class="row">
      <div class="col-sm-9">
            <%= check_box_tag 'amenities[]', amenity -%>
            <%= h amenity -%>                
      </div>
    </div>  
  <% end %>
  <%= f.submit "Add", class: "btn" do%>
  <span class="glyphicon glyphicon-plus"></span>
  <% end %>
<% end %>