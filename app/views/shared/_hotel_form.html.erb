<%= form_for @hotel do |f| %>
  <%= render 'shared/error_messages', object: @hotel %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control', :required => true %>

  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control', :required => true %>
  <%= f.submit "Post", class: "btn" %>
<% end %>