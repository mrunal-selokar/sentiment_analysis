<%= form_for @hotel do |f| %>
  <%= render 'shared/error_messages', object: @hotel %>
  <%#= hidden-field_tag "amenities[]", '' %>
 <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>

  Select Amentites Available

  <%# for amenity in @amentites %>
  	<%#= checkbox_tag "amentites[]", amenity %> <%# amenity %>
  <%# end %>
  <% @amenities = Amenity.column_names[1..8] %>

<ul>
  <% @amenities.each do |amenity| %>
      <li>
        <%= check_box_tag 'amenities[]', amenity -%>
        <%= h amenity -%>
      </li>
  <% end %>
</ul>

   <%= f.submit "Add", class: "btn btn-success" %>
<% end %>
